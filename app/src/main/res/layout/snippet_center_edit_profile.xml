<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile_image"
                android:id="@+id/profile_photo"
                android:layout_marginTop="20dp"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chageProfilePhoto"
                android:layout_below="@id/profile_photo"
                android:text="Change Photo"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"/>
            <!--  username section  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/chageProfilePhoto"
                android:layout_marginTop="80dp"
                android:id="@+id/relLayout1"
                android:background="@drawable/gray_border_bottom">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_username"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:hint="Username"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:inputType="textNoSuggestions"
                    android:background="@null"/>
            </RelativeLayout>
            <!--  Display name section  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relLayout1"
                android:id="@+id/relLayout2"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_border_bottom">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_displayname"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/display_name"
                    android:hint="Display name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:inputType="textNoSuggestions"
                    android:background="@null"/>
            </RelativeLayout>
            <!-- website section  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relLayout2"
                android:id="@+id/relLayout3"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_border_bottom">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_website"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/website"
                    android:hint="Website"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:inputType="textNoSuggestions"
                    android:background="@null"/>
            </RelativeLayout>
            <!-- description section  -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relLayout3"
                android:id="@+id/relLayout4"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_border_bottom">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_description"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:hint="Description"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:inputType="textNoSuggestions"
                    android:background="@null"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Private Information"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/relLayout4"
                android:layout_marginTop="40dp"
                android:textColor="@color/black"
                android:id="@+id/privateInfo"
                android:background="@drawable/gray_border_bottom"/>

            <!-- email Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/privateInfo"
                android:id="@+id/relLayout5"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_border_bottom">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_email"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:inputType="textNoSuggestions"
                    android:background="@null"/>
            </RelativeLayout>
            <!-- PHone Number Section-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/relLayout5"
                android:id="@+id/relLayout6"
                android:layout_marginTop="15dp"
                android:background="@drawable/gray_border_bottom">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_phone_number"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/phoneNumber"
                    android:hint="Phone Number"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:inputType="textNoSuggestions"
                    android:background="@null"/>
            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>
</merge>